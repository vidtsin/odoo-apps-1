<odoo>
  <data>

    <record id="good_crm_res_partner" model="ir.ui.view">
      <field name="name">Prospects</field>
      <field name="model">res.partner</field>
      <field name="inherit_id" ref="base.view_partner_form"/>
      <field name="arch" type="xml">
        <div class="oe_title" position="after">
          <div class="o_row">
            <label for="is_prospect" string="Is Prospect?"/>
            <field name='is_prospect'/>
          </div>
        </div>
      </field>
    </record>

    <record id="good_crm_res_partner_action_form" model="ir.actions.act_window">
      <field name="name">Prospects</field>
      <field name="res_model">res.partner</field>
      <field name="view_mode">tree,form</field>
      <field name="context">{"search_default_is_prospect":1}</field>
      <field name="help" type="html">
        <p class="oe_view_nocontent_create">
          Register a prospect
        </p>
        <p>
          A prospect is a customer in the process of being acquired
        </p>
      </field>
    </record>

    <record id="good_crm_res_partner_search" model="ir.ui.view">
      <field name="name">good_crm_res_partner.search</field>
      <field name="model">res.partner</field>
      <field name="inherit_id" ref="base.view_res_partner_filter"/>
      <field name="arch" type="xml">
        <filter name="type_person" position="before">
          <filter string="Prospects" name="is_prospect" domain="[('is_prospect','=',1)]"/>
        </filter>
      </field>
    </record>

    <menuitem id="good_crm_menu_res_partner"
      name="Prospects"
      parent="good_crm_menu_current_operations"
      action="good_crm_res_partner_action_form"
      sequence=""/>

  </data>
</odoo>
